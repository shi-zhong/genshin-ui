{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "packages/**/*", "packages/**/*.vue", "package/**/*.tsx" ,"package/**/*.ts"],
  "exclude": ["packages/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"],
      "@@/*": ["./packages/components/*"]
    }
  }
}
